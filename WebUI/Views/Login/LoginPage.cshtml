    <script src="@SessionRequest.baseUrl/assets/global/plugins/jquery-validation/js/additional-methods.min.js" type="text/javascript"></script>
    <script src="@SessionRequest.baseUrl/assets/global/plugins/select2/js/select2.full.min.js" type="text/javascript"></script>
