<body class="login">
    <!-- BEGIN : LOGIN PAGE 5-1 -->
    <div class="user-login-5">
        <div class="row bs-reset">
            <div class="col-md-6 bs-reset mt-login-5-bsfix">
                <div class="login-bg">
                    <img style="position: inherit; margin: 0px; padding: 0px; border: none; width: 100%; height: 100%; max-height: none; max-width: none; z-index: -999999; left: 0px; margin-top:190px;" class="login-logo" src="Content/img/logo.png" />
                </div>
            </div>
            <div class="col-md-6 login-container bs-reset mt-login-5-bsfix">
                <div class="login-content">
                    <h1>@SessionRequest.Title</h1>
                    <form class="login-form">
                        <div class="alert alert-danger display-hide">
                            <button class="close" data-close="alert"></button>
                            <span>User Name Password Enter</span>
                        </div>
                        <div class="row">
                            <div class="col-xs-6">
                                <input class="form-control form-control-solid placeholder-no-fix form-group" type="text" autocomplete="off" placeholder="@Html.Raw("User Name".Trans())" name="username" required />
                            </div>
                            <div class="col-xs-6">
                                <input class="form-control form-control-solid placeholder-no-fix form-group" type="password" autocomplete="off" placeholder="@Html.Raw("Password".Trans())" name="password" required />
                            </div>

                        </div>
                        <div class="row">

                            <div class="col-sm-12 text-right">
                                <select style="margin-right:10px;" id="drpUserLanguage" name="drpUserLanguage"></select>
                                <button class="btn green" type="submit">@Html.Raw("Login".Trans())</button>
                                <hr />
                                <a href="User/InsertOrUpdatePage" data-target="#ajax" data-toggle="modal">
                                    <i class="icon-user"></i>  @Html.Raw("Register".Trans())
                                </a>
                            </div>

                        </div>
                        <div class="copyright font-blue-dark">
                            @Html.Raw(SessionRequest.Copyright)
                            <hr>
                        </div>
                    </form>
                </div>
            </div>

        </div>

    </div>


    <div class="modal fade" id="ajax" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <img src="@SessionRequest.baseUrl/assets/global/img/loading-spinner-grey.gif" alt="" class="loading">
                    <span> &nbsp;&nbsp;@Html.Raw("Loading".Trans())... </span>
                </div>
            </div>
        </div>
    </div>

    <!-- END : LOGIN PAGE 5-1 -->
    <!--[if lt IE 9]>
